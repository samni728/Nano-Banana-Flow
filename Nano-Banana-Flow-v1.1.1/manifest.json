{
    "manifest_version": 3,
    "name": "大香蕉批量生图 (Nano Banana Flow)",
    "version": "1.1.1",
    "short_name": "大香蕉生图",
    "description": "每行一个提示词（对应一张图片），本工具将逐条进行生成",
    "permissions": [
        "activeTab",
        "downloads",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://*.googleusercontent.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}